---
// Enhanced Context Test Page
// Tests the new loading states, error handling, and enhanced FlashcardContext

import Layout from '../layouts/Layout.astro';
---

<Layout title="Enhanced Context Test - Remember Me">
  <div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          🧪 Enhanced Context Test Page
        </h1>
        <p class="text-gray-600 mb-4">
          Test loading states, error handling, and enhanced FlashcardContext features
        </p>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <h2 class="font-semibold text-yellow-800 mb-2">🚧 Under Development</h2>
          <p class="text-yellow-700 text-sm">
            This page is being developed to test enhanced FlashcardContext features.
            For now, you can test basic functionality on the main app and database test pages.
          </p>
          <div class="mt-4 flex gap-4">
            <a 
              href="/" 
              class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors"
            >
              📱 Main App
            </a>
            <a 
              href="/db-test" 
              class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition-colors"
            >
              🔥 Database Test
            </a>
          </div>
        </div>
      </div>

      <!-- Loading States Demo -->
      <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">🔄 Loading States Demo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          
          <!-- Fetching Cards -->
          <div class="p-4 border rounded-lg">
            <h3 class="font-medium text-sm text-gray-700 mb-2">Fetching Cards</h3>
            <div class="flex items-center gap-2">
              <div class="animate-spin h-4 w-4 border-2 border-blue-600 border-t-transparent rounded-full"></div>
              <span class="text-sm text-gray-600">Loading flashcards...</span>
            </div>
          </div>

          <!-- Saving Progress -->
          <div class="p-4 border rounded-lg">
            <h3 class="font-medium text-sm text-gray-700 mb-2">Saving Progress</h3>
            <div class="flex items-center gap-2">
              <div class="animate-pulse h-4 w-4 bg-green-600 rounded-full"></div>
              <span class="text-sm text-gray-600">Saving progress...</span>
            </div>
          </div>

          <!-- Syncing -->
          <div class="p-4 border rounded-lg">
            <h3 class="font-medium text-sm text-gray-700 mb-2">Syncing</h3>
            <div class="flex items-center gap-2">
              <div class="animate-bounce h-4 w-4 bg-blue-600 rounded-full"></div>
              <span class="text-sm text-gray-600">Syncing data...</span>
            </div>
          </div>

        </div>
      </div>

      <!-- Error States Demo -->
      <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">🚨 Error States Demo</h2>
        
        <!-- Network Error -->
        <div class="border border-orange-300 bg-orange-50 text-orange-800 rounded-lg p-4 mb-4">
          <div class="flex items-start gap-3">
            <span class="text-2xl flex-shrink-0">📡</span>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium mb-1">Network Error</h3>
              <p class="text-sm mb-3">Unable to connect to the server. Please check your internet connection.</p>
              <button class="px-3 py-1 bg-white bg-opacity-50 hover:bg-opacity-75 border border-current rounded text-sm transition-all">
                🔄 Try Again
              </button>
            </div>
          </div>
        </div>

        <!-- Auth Error -->
        <div class="border border-red-300 bg-red-50 text-red-800 rounded-lg p-4 mb-4">
          <div class="flex items-start gap-3">
            <span class="text-2xl flex-shrink-0">🔐</span>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium mb-1">Authentication Error</h3>
              <p class="text-sm mb-3">Authentication failed. Please sign in again.</p>
              <button class="px-3 py-1 bg-white bg-opacity-50 hover:bg-opacity-75 border border-current rounded text-sm transition-all">
                🔄 Retry Login
              </button>
            </div>
          </div>
        </div>

      </div>

      <!-- Connection Status Demo -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">📊 Connection Status Demo</h2>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          
          <!-- Connected -->
          <div class="text-center p-4 border rounded-lg">
            <div class="flex items-center justify-center gap-1 text-green-600 mb-2">
              <span>✅</span>
              <span class="text-sm font-medium">Connected</span>
            </div>
            <p class="text-xs text-gray-500">All systems operational</p>
          </div>

          <!-- Syncing -->
          <div class="text-center p-4 border rounded-lg">
            <div class="flex items-center justify-center gap-1 text-blue-600 mb-2">
              <span class="animate-spin">🔄</span>
              <span class="text-sm font-medium">Syncing</span>
            </div>
            <p class="text-xs text-gray-500">Updating data...</p>
          </div>

          <!-- Error -->
          <div class="text-center p-4 border rounded-lg">
            <div class="flex items-center justify-center gap-1 text-red-600 mb-2">
              <span>❌</span>
              <span class="text-sm font-medium">Error</span>
            </div>
            <p class="text-xs text-gray-500">Sync failed</p>
          </div>

          <!-- Offline -->
          <div class="text-center p-4 border rounded-lg">
            <div class="flex items-center justify-center gap-1 text-gray-600 mb-2">
              <span>📴</span>
              <span class="text-sm font-medium">Offline</span>
            </div>
            <p class="text-xs text-gray-500">No connection</p>
          </div>

        </div>
      </div>

    </div>
  </div>
</Layout>
