---
import '../styles/globals.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Fonts for consistent cross-platform display -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Itim&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		overflow: hidden;
		margin: 0;
		width: 100%;
		height: 100%;
		position: fixed;
		overscroll-behavior: none;
		font-family: 'IBM Plex Sans', 'Itim', ui-rounded, "Hiragino Maru Gothic ProN", Manjari, -apple-system, BlinkMacSystemFont, sans-serif;
	}
	
	/* Ensure proper overflow handling for mobile */
	body {
		overflow-x: hidden;
		-webkit-overflow-scrolling: touch;
	}
</style>
